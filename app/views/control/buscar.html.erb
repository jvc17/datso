<%= form_for :producto, :url => {:controller => "control", :action => "buscar_post"}, :method => :get, :html => { :class => "form-horizontal" , :id => "form_producto"}  do |f| %>
  <div class="form-group">
    <div class="col-sm-8">
      <input type="text" class="form-control" placeholder="Buscar por nombre del cliente" name="txt_cliente_atencion">
    </div>
    <div class="col-sm-2">
      <input type="submit" value="buscar"/>
    </div>
  </div>
   <% end %>
  <table class="table table-striped table-bordered table-hover dataTables-example" Id="tablaUsuarios">
    <thead>
        <tr>
            <th>Id</th>
            <th>Cliente</th>
            <th>Valoracion</th>
        </tr>
    </thead>
    <tbody>
        <% if @Clientes != nil && @Clientes != ""
         
            @Clientes.each do |p| %>
        <tr class="gradeU">
            <td><%=p.id %></td>
            <td><%=p.cliente %></td>
            <td><%=p.valoracion %></td>
        </tr>
        <% end end %>
    </tbody>
</table>
